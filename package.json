{
  "name": "advent-of-code",
  "type": "module",
  "private": true,
  "description": "apazzolini's Advent of Code solutions",
  "repository": "https://github.com/apazzolini/advent-of-code",
  "author": "Andre Azzolini (apazzolini)",
  "scripts": {
    "check": "yarn run lint && yarn run test",
    "generate": "node src/generate-skeleton.js",
    "lint": "eslint -c .eslintrc src",
    "solve": "node -r dotenv/config src/main.js",
    "solve:watch": "nodemon -r dotenv/config src/main.js",
    "solve:debug": "node --inspect-brk --experimental-vm-modules -r dotenv/config src/main.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:debug": "node --inspect-brk --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "2.2.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "chalk": "4.1.0",
    "clipboardy": "^2.3.0",
    "dotenv": "8.2.0",
    "lodash": "4.17.20",
    "node-fetch": "2.6.1"
  },
  "jest": {
    "transform": {},
    "testEnvironment": "jest-environment-node",
    "testPathIgnorePatterns": [
      "<rootDir>/templates",
      "<rootDir>/node_modules/"
    ]
  }
}
