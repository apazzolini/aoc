{
  "name": "advent-of-code",
  "type": "module",
  "private": true,
  "description": "apazzolini's Advent of Code solutions",
  "repository": "https://github.com/apazzolini/advent-of-code",
  "author": "Andre Azzolini (apazzolini)",
  "scripts": {
    "check": "bun run lint && bun test",
    "generate": "bun src/generate-skeleton.ts",
    "lint": "eslint -c .eslintrc.cjs src",
    "solve": "bun src/main.ts",
    "solve:watch": "bun --watch src/main.ts",
    "tw": "bun test --watch"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "bun-types": "latest",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "clipboardy": "^4.0.0",
    "lodash": "^4.17.21"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 110,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
